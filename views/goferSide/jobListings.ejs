}

:modal .listing .bottomRow {
    display: flex;
    flex-direction: column;
    background-color: lightpink;
    padding: 9px;
    
}

</style>

<section id="jobListings">
    <% job.forEach((job) => { %>
        <%- include('jobListing', {job: job})%>
    <% }) %>
</section>
<script>
    var showListing = document.querySelectorAll('.listing')

    var popups = document.querySelectorAll('.listingpopup')
    var i = 0;
    showListing.forEach((listing) => {
    let eachpopup = popups[i];
    i++;
    listing.addEventListener('click', () =>
    eachpopup.showModal())
    });
</script>