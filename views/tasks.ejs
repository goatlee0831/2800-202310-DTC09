<%- include('templates/header') %>
    <%- include('templates/nav') %>
        <main>
            <div class="card1">
                <header class="left">
                    <h2>All Tasks</h2>
                </header>
            </div>

           
                <!-- Tasks In Progress -->
                <div class="card3">
                    <div class="left">
                        <h3>Posted Tasks</h3>
                    </div>
                    
                    
                    <% usersTasks.forEach(task=> { %>
                        <div class="card right column2">
                            <h3><%= task.title %></h3>
                            <p><%= task.description %></p>
                            <p><%= task.Date %></p>
                            <p><%= task.offer %></p>
                            <p><%= task.status %></p>
                        </div>
                        <% }) %>
                        
                </div>
                <!-- Pending Tasks -->
                <div class="card2">
                    <div class="left">
                        <h3>Pending Tasks</h3>
                    </div>
    
                    
                    <% usersTasks.forEach(task=> { %>
                        <% if(task.acceptedby) { %>
                            <div class="card right column2">
                                <h3><%= task.title %></h3>
                                <p><%= task.description %></p>
                                <p><%= task.Date %></p>
                                <p><%= task.offer %></p>
                                <p><%= task.status %></p>
                                <p><%= task.acceptedby %></p>
                                
                            </div>
                    <% }}) %>
                </div>

                <!-- Completed Tasks -->
                <div class="card3">
                    <div class="left">
                        <h3>Completed Tasks</h3>
                    </div>
                    
                    <div id="PendingTaskCards" class="right">
                        <% usersTasks.forEach(task=> { %>
                            <% if(task.completed == true) { %>
                                <div class="card right column2">
                                    <h3><%= task.title %></h3>
                                    <p><%= task.description %></p>
                                    <p><%= task.Date %></p>
                                    <p><%= task.offer %></p>
                                    <p><%= task.status %></p>
                                    <p><%= task.acceptedby %></p>
                                </div>
                        <% }}) %>
                    </div>
                </div>
        </main>

        <%- include('templates/footer') %>