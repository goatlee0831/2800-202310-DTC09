<%- include('templates/header') %>
    <%- include('templates/nav') %>
        <main>
            <div class="card1">
                <header style="text-align: center;">
                    <h2>All Tasks</h2>
                </header>
            </div>

           
                <!-- Tasks In Progress -->
                <div>
                    <h1>Tasks in Progress</h1>
                    <div id="InProgressTasks"></div>
                    <% usersTasks.forEach(task=> { %>
                        <div class="card">
                            <h3><%= task.title %></h3>
                            <p><%= task.description %></p>
                            <p><%= task.Date %></p>
                            <p><%= task.location %></p>
                            <p><%= task.offer %></p>
                            <p><%= task.status %></p>
                        </div>
                        <% }) %>
                        
                </div>
                <!-- Scheduled Tasks -->
                <div>
                    <h1>Scheduled Tasks</h1>
                    <div id="ScheduledTasks"></div>
                    <% usersTasks.forEach(task=> { %>
                        <% if(task.status == "closed" && !task.completed) { %>
                            <div class="card">
                                <h3><%= task.title %></h3>
                                <p><%= task.description %></p>
                                <p><%= task.Date %></p>
                                <p><%= task.location %></p>
                                <p><%= task.offer %></p>
                                <p><%= task.status %></p>
                            </div>
                    <% }}) %>
                </div>

                <!-- Pending Tasks -->
                <div>
                    <h1>Pending Tasks</h1>
                    <div id="PendingTaskCards">
                        <% usersTasks.forEach(task=> { %>
                            <% if(task.status == "pending") { %>
                                <div class="card">
                                    <h3><%= task.title %></h3>
                                    <p><%= task.description %></p>
                                    <p><%= task.Date %></p>
                                    <p><%= task.location %></p>
                                    <p><%= task.offer %></p>
                                    <p><%= task.status %></p>
                                </div>
                        <% }}) %>
                    </div>
                </div>
                                <!-- Completed Tasks -->
                <div>
                    <h1>Completed Tasks</h1>
                    <div id="CompletedTaskCards">
                        <% usersTasks.forEach(task=> { %>
                            <% if(task.status == "closed" && task.completed) { %>
                                <div class="card">
                                    <h3><%= task.title %></h3>
                                    <p><%= task.description %></p>
                                    <p><%= task.Date %></p>
                                    <p><%= task.location %></p>
                                    <p><%= task.offer %></p>
                                    <p><%= task.status %></p>
                                </div>
                        <% }}) %>
                    </div>
                </div>
        </main>

